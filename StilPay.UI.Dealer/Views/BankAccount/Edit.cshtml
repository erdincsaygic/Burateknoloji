@model BankAccountEditViewModel

@{
    ViewData["Title"] = "Banka Hesabı Tanımla";
}

<div class="row mt-2">
    <div class="col-lg-1 offset-lg-3">
        <div class="d-grid">
            <a class="btn btn-dark btn-block" asp-controller="BankAccount" asp-action="Index"><i class="fa fa-chevron-left"></i>&nbsp;&nbsp;Geri Dön</a>
        </div>
    </div>
</div>

<div class="row mt-2">
    <div class=" col-lg-6 offset-lg-3">

        <div class="card border bg-white">
            <div class="card-body">

                <form asp-controller="BankAccount" asp-action="SaveMyBank" asp-antiforgery="true" id="frmDef"
                      data-ajax="true" data-ajax-method="POST"
                      data-ajax-begin="onBegin" data-ajax-failure="onFailure"
                      data-ajax-success="onSuccess" data-ajax-complete="onComplete">

                    <input type="hidden" asp-for="entity.ID" />

                    <div class="row border-bottom mt-2">
                      <div class="col-lg-3">
                            <label class="form-label"><span style="color:red">* </span>Takma Adı :</label>
                        </div>
                         <div class="col-lg-9">
                            <input type="text" class="form-control" asp-for="entity.Name" maxlength="50">
                        </div>
                    </div>

                    <div class="row border-bottom mt-2">
                      <div class="col-lg-3">
                            <label class="form-label"><span style="color:red">* </span>Banka :</label>
                        </div>
                         <div class="col-lg-9">
                            <select class="form-select" asp-for="entity.IDBank" asp-items="@(new SelectList(Model.Banks,"ID","Name"))">
                                <option value="">Seçiniz</option>
                            </select>
                        </div>
                    </div>

                    <div class="row border-bottom mt-2">
                      <div class="col-lg-3">
                            <label class="form-label"><span style="color:red">* </span>IBAN :</label>
                        </div>
                         <div class="col-lg-9">
                            <input type="text" class="form-control" asp-for="entity.IBAN" maxlength="32">
                        </div>
                    </div>

                    <div class="row border-bottom mt-2">
                      <div class="col-lg-3">
                            <label class="form-label"><span style="color:red">* </span>Hesap Sahibi Adı :</label>
                        </div>
                         <div class="col-lg-9">
                            <input type="text" class="form-control" asp-for="entity.Title" maxlength="100">
                        </div>
                    </div>

                    <div class="row border-bottom mt-2">
                      <div class="col-lg-3">
                            <label class="form-label"><span style="color:red">* </span>Durum :</label>
                        </div>
                         <div class="col-lg-9">
                            <select class="form-select" asp-for="entity.StatusFlag">
                                <option value="true">Aktif</option>
                                <option value="false">Pasif</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-lg-3 offset-lg-9">
                            <div class="d-grid">
                                <button type="submit" class="btn btn-custom" id="btnSubmit"><i class="fa fa-save"></i>&nbsp;&nbsp;&nbsp;Kaydet</button>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section js{
    <script type="text/javascript" src="~/js/jquery/jquery-validate.js"></script>
    <script type="text/javascript" src="~/js/jquery/jquery-unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/js/mask/imask.js"></script>
    <script src="~/js/views/bankaccount/edit.js"></script>
    }