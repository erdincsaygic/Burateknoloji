@{
    ViewData["Title"] = "Anasayfa";
}


<head>
    <meta charset="UTF-8">
    <link href="~/ui/assets/css/plugin/slider.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.5.9/slick-theme.min.css" rel="stylesheet" />

</head>


<section class="banner-section index-11">
    <div class="overlay">
        <div class="main-content" style="text-align:center; font-size: 36px;">
            @* <p style="padding: 0 !important"> Stilpay Lidio ve EsnekPos İştirakidir. </p> *@
        </div>
        <div class="banner-wrap container">
            <div class="banner-slider">

                @if (ViewBag.Sliders != null && ViewBag.Sliders.Count > 0)
                {
                    @foreach (var item in ViewBag.Sliders as List<StilPay.Entities.Concrete.Slider>)
                    {
                        <div class="banner-slide">
                            <div class="row">
                            <div class="col-xl-5 col-lg-6">
                                <div class="container" style="margin-left:40px">
                                    <div class="hero-content">
                                        <h4 class="color">
                                            @item.Header
                                        </h4>
                                        <p class="xxlr" style="color:white;padding: 20px 0 40px;">
                                            @item.Content
                                        </p>

                                        @if (item.ShowButton && item.ButtonRedirectUrl != null && !string.IsNullOrEmpty(item.ButtonRedirectUrl))
                                        {
                                            <a href="@item.ButtonRedirectUrl" class="cmn-btn">@item.ButtonName</a>    
                                        }
                                    </div>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <div class="col-xl-7 col-lg-6">
                                    <div class="container">
                                        <div class="hero-content">
                                            <img src="@item.ImageUrl" alt="image"/>
                                        </div>
                                    </div>
                                </div>
                                    
                            }
                        </div>
                    </div>
                        
                    }
                }
                else
                {
                    <div class="banner-slide">
                        <div class="row">
                            <div class="col-xl-5 col-lg-6">
                                <div class="container" style="margin-left:40px">
                                    <div class="hero-content">
                                        <h4 class="color">
                                            TÜRKİYE’NİN YENİ NESİL DİJİTAL PAZARYERİ PLATFORMU
                                        </h4>
                                        <p class="xxlr" style="color:white;padding: 20px 0 40px;">
                                            Ürünlerinizi Stilpay ile Satın ve Karlı Çıkın
                                            Müşterilerinize En Hızlı Satış Çözümleri Ertesi Gün Ödeme ve
                                            Düşük İşlem Ücretleri Hemen Sizde Aramıza Katılın!
                                        </p>
                                        <a asp-controller="KurumsalBasvuru" asp-action="Index" class="cmn-btn">BAŞVURU YAP!</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-7 col-lg-6">
                                <div class="container">
                                    <div class="hero-content">
                                        <img src="~/ui/assets/img/index11-illu.png" alt="image" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="banner-slide">
                        <div class="row">
                            <div class="col-xl-5 col-lg-6">
                                <div class="container" style="margin-left:40px">
                                    <div class="hero-content">
                                        <h4 class="color">
                                            TÜRKİYE’NİN YENİ NESİL DİJİTAL PAZARYERİ PLATFORMU
                                        </h4>
                                        <p class="xxlr" style="color:white;padding: 20px 0 40px;">
                                            Ürünlerinizi Stilpay ile Satın ve Karlı Çıkın
                                            Müşterilerinize En Hızlı Satış Çözümleri Ertesi Gün Ödeme ve
                                            Düşük İşlem Ücretleri Hemen Sizde Aramıza Katılın!
                                        </p>
                                        <a asp-controller="KurumsalBasvuru" asp-action="Index" class="cmn-btn">BAŞVURU YAP!</a>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-7 col-lg-6">
                                <div class="container">
                                    <div class="hero-content">
                                        <img src="~/ui/assets/img/about-us-banner-2.png" alt="image" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>  
                }
            </div>
        </div>
    </div>

</section>
<!-- banner-section end -->
