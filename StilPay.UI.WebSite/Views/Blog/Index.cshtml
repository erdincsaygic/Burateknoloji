<!-- Latest Articles In start -->
<section class="latest-articles">
    <div class="overlay pt-120 pb-120">
        <div class="container">
            <div class="section-header">
                <div class="row justify-content-between">
                    <div class="col-xl-4">
                        <h2 class="title">Son haberler</h2>
                    </div>
                    <div class="col-xl-8 d-flex justify-content-xl-end justify-content-start">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item" role="presentation">
                                <button class="nav-link active"
                                        id="all-tab"
                                        data-bs-toggle="tab"
                                        data-bs-target="#all"
                                        type="button"
                                        role="tab"
                                        aria-controls="all"
                                        aria-selected="true">
                                    Hepsi
                                </button>
                            </li>
                            @foreach (var item in ViewBag.Category as List<StilPay.Entities.Concrete.BlogCategory>)
                            {
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link"
                                            id="@item.Name-tab"
                                            data-bs-toggle="tab"
                                            data-bs-target="#@item.Name"
                                            type="button"
                                            role="tab"
                                            aria-controls="@item.Name"
                                            aria-selected="false">
                                        @item.Name
                                    </button>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="tab-content" id="myTabContent">

                        <div class="tab-pane fade show active"
                             id="all"
                             role="tabpanel"
                             aria-labelledby="all-tab">
                            <div class="row cus-mar">
                                @foreach (var item in Model)
                                {
                                    <div class="col-lg-6">
                                        <div class="single-area">
                                            <div class="top-item">
                                                <img src="data:image/jpeg;base64,@item.Image" alt="Image">
                                            </div>
                                            <div class="bottom-item">
                                                <a href="blog-single.html">
                                                    <h5>
                                                        @item.Title
                                                    </h5>
                                                </a>
                                                <p>
                                                    @item.Body.Substring(0,100)
                                                </p>
                                                <div class="date-area d-flex justify-content-between">
                                                    <a asp-controller="Blog" asp-action="Detay" asp-route-id="@item.ID">
                                                        Detay Göster
                                                        <img src="~/ui/assets/img/right-icon-5.png"
                                                             alt="image" />
                                                    </a>
                                                    <p class="mdr">@item.BlogDate.ToLongDateString()</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        @foreach (var item in ViewBag.Category as List<StilPay.Entities.Concrete.BlogCategory>)
                        {
                            <div class="tab-pane fade"
                                 id="@item.Name"
                                 role="tabpanel"
                                 aria-labelledby="@item.Name-tab">
                                <div class="row cus-mar">
                                    @foreach (var blog in Model)
                                    {
                                        @if (item.Name == blog.BlogCategoryName)
                                        {
                                            <div class="col-lg-6">
                                                <div class="single-area">
                                                    <div class="top-item">
                                                        <img src="data:image/jpeg;base64,@blog.Image" alt="Image">
                                                    </div>
                                                    <div class="bottom-item">
                                                        <a href="blog-single.html">
                                                            <h5>
                                                                @blog.Title
                                                            </h5>
                                                        </a>
                                                        <p>
                                                            @blog.Body.Substring(0,100)
                                                        </p>
                                                        <div class="date-area d-flex justify-content-between">
                                                            <a asp-controller="Blog" asp-action="Detay" asp-route-id="@blog.ID">
                                                                Detay Göster
                                                                <img src="~/ui/assets/img/right-icon-5.png"
                                                                     alt="image" />
                                                            </a>
                                                            <p class="mdr">@blog.BlogDate.ToShortDateString()</p>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
