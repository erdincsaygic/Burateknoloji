@{
    ViewData["Title"] = "Blog";
}
@model List<StilPay.Entities.Concrete.Blog>

<!-- banner-section start -->
<section class="banner-section inner-pages blog">
    <div class="overlay">
        <div class="banner-content pb-120">
            <div class="container">
                <div class="row">
                    <div class="col-lg-7 col-md-10">
                        <div class="main-content">
                            <h1>Blog</h1>
                            <div class="breadcrumb-area">
                                <nav aria-label="breadcrumb">
                                    <ul class="breadcrumb d-flex align-items-center">
                                        <li class="breadcrumb-item">
                                            <a asp-controller="AnaSayfa" asp-action="Index">Anasayfa</a>
                                        </li>
                                        <li class="breadcrumb-item active" aria-current="page">
                                            Blog
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="banner-bottom-area">
        <div class="container">
            <div class="top-area">
                <div class="row align-items-center">
                    <div class="col-lg-7 cus-z text-start">
                        <div class="profile-area d-flex justify-content-between align-items-center">
                            <div class="profile-left d-flex align-items-center">
                                <div class="profile">
                                    <img src="~/ui/assets/img/Stilpay.jpg" alt="image" />
                                </div>
                                <h5>STILPAY</h5>
                            </div>
                            <div class="profile-right">
                                <p class="mdr">@Model.Last().BlogDate.ToShortDateString()</p>
                            </div>
                        </div>
                        <a href="blog-single.html">
                            <h3>
                                @Model.Last().Title
                            </h3>
                        </a>
                        <p>
                            @Model.Last().Body.Substring(0,100)
                        </p>
                        <a asp-controller="Blog" asp-action="Detay" asp-route-id="@Model.Last().ID">
                            Detay Göster <img src="~/ui/assets/img/right-icon-5.png" alt="image" />
                        </a>
                    </div>
                    <div class="col-lg-5 cus-z">
                        <img src="data:image/jpeg;base64,@Model.Last().Image" alt="Image">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
