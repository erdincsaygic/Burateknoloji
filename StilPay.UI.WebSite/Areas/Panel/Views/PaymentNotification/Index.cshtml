@model PaymentNotificationViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Burateknoloji | Ödeme Bildirimi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/areas/panel/css/views/paymentnotification/style.css" rel="stylesheet" />
        <link rel="shortcut icon" href="~/ui/assets/img/fav.png" type="image/x-icon">
</head>

<body>

    <div class="parrot">
        <div class="mainbox">
            <div class="allows">
                <div class="progress" id="progress"></div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-1"></i></div>
                    <div class="baba">Ödeme<br> Yöntemi</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-2"></i></div>
                    <div class="baba">Ödeme <br>Bilgileri</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-3"></i></div>
                    <div class="baba">Ödeme <br>Özeti</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-4"></i></div>
                    <div class="baba">Sms<br>Doğrulama</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-5"></i></div>
                    <div class="baba">Üye<br>Profil</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-6"></i></div>
                    <div class="baba">İşlem <br>Bilgileri</div>
                </div>
            </div>

            <div class="deneme">
                <!---------------STEP 1 START------------------>
                <div class="slidercont" id="step1">
                    <div class="arrive">
                        <p class="bold">
                            @if (!Model.IsForeignCreditCard)
                                @(string.Concat(Model.entity.Amount.ToString("n2"), " ₺"))
                            else
                                @(string.Concat(Model.entity.Amount.ToString("n2"), $" {Model.CurrencySymbol}", $" ({Model.CurrencyName})"))
                        </p>

                        <p class="thin">GENEL TOPLAM</p>
                    </div>
                    <div class="parrots">
                        <p class="thins2" style="margin-top:1rem;">@(string.Concat("İŞLEM NUMARANIZ #", Model.entity.TransactionID))</p>
                    </div>

                    <div class="boxbank">
                        <div class="menu2step" style="width:unset; margin-top:2rem; margin-bottom:2rem;">
                            <h3 class="" style="text-align:center !important;">ÖDEME YÖNTEMİ SEÇİNİZ</h3>
                        </div>
                    </div>


                    @if (!Model.ActivePaymentMethodModel.ForeignCreditCardBeUsed && !Model.ActivePaymentMethodModel.CreditCardBeUsed && !Model.ActivePaymentMethodModel.TransferBeUsed)
                    {
                        <div class="boxbank">
                            <div class="menu2step" style="width:unset; margin-top:2rem; margin-bottom:2rem;">
                                <h3 class="text-danger" style="text-align:center !important; font-size:32px;text-transform:none">Bir hata oluştu lütfen pos sağlayıcısıyla iletişime geçin</h3>
                            </div>
                        </div>
                    }

                    <div class="boxbank" style="flex-flow: wrap;row-gap: 50px;">
                        @if (Model.ActivePaymentMethodModel.TransferBeUsed && !Model.IsForeignCreditCard)
                        {
                            <a asp-action="transfer" asp-controller="paymentnotification" asp-area="panel" class="hovers" data-value="2">
                                <div class="boxes">
                                    <div class="text0"><img src="~/areas/panel/img/paymentnotification/2.png" alt="bank"></div>
                                    <div class="text1">SADECE TÜRKİYE</div>
                                    <div class="text2">
                                        Banka Transferi
                                        <br> Havale / EFT & FAST & ATM
                                    </div>
                                    <div class="text3">TÜRKİYE BANKALARINDAN <br> ANINDA PARA TRANSFERİ EDİN</div>
                                </div>
                            </a>
                        }
                        @if (Model.ActivePaymentMethodModel.CreditCardBeUsed && !Model.IsForeignCreditCard)
                        {
                            <a asp-action="creditCard" asp-controller="paymentnotification" asp-area="panel" class="hovers" data-value="2">
                                <div class="boxes">
                                    <div class="text0"><img src="~/areas/panel/img/paymentnotification/1.png" alt="bank"></div>
                                    <div class="text1">SADECE TÜRKİYE</div>
                                    <div class="text2">
                                        KREDİ KARTI, BANKA KARTI
                                        <br> VE ÖN ÖDEMELİ KARTLAR
                                    </div>
                                    <div class="text3">TÜRKİYE BANKALARINA AİT <br> TÜM KARTLAR İLE ÖDEME YAPIN</div>
                                </div>
                            </a>
                        }

                        @if (Model.ActivePaymentMethodModel.ForeignCreditCardBeUsed )
                        {
                            <a asp-action="foreignCreditCard" asp-controller="paymentnotification" asp-area="panel" class="hovers" data-value="2">
                            
                                <div class="boxes">
                                    <div class="text0"><img src="~/areas/panel/img/paymentnotification/1.png" alt="bank"></div>
                                    <div class="text1" style="text-decoration: underline">SADECE YURT DIŞI</div>
                                    <div class="text2">
                                        <span style="text-decoration: underline">YURT DIŞI</span> KREDİ KARTI, BANKA KARTI
                                        <br> VE ÖN ÖDEMELİ KARTLAR
                                    </div>
                                    <div class="text3">YURTDIŞI BANKALARINA AİT <br> TÜM KARTLAR İLE ÖDEME YAPIN</div>
                                </div>
                          
                            </a>
                        }

                    </div>

                    <div class="box">
                        <img src="~/areas/panel/img/paymentnotification/3D.png" alt="">
                        <div class="line-2"></div>
                        <hr>
                        <img src="~/areas/panel/img/paymentnotification/366-3669285_secure-ssl-encryption-logo-png-transparent-png.png" alt="">
                        <div class="line-2"></div>
                        <img src="~/areas/panel/img/paymentnotification/Burateknoloji1.png" alt="">
                    </div>
                </div>
                <!---------------STEP 1 END------------------>
            </div>

            <div class="boxfooter">
                <div class="boxlast">
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/4.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/13.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/8.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/10.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/9.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/7.png" alt="">
                    </div>


                    
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/14.webp" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/areas/panel/js/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/imask/3.4.0/imask.min.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/animation.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/app.js"></script>
</body>

</html>
