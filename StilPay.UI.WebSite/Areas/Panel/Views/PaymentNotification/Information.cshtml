@model PaymentNotificationViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Burateknoloji | Ödeme Bildirimi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/areas/panel/css/views/paymentnotification/style.css" rel="stylesheet" />
        <link rel="shortcut icon" href="~/ui/assets/img/fav.png" type="image/x-icon">
</head>

<body>

    <div class="parrot">
        <div class="mainbox">
            <div class="allows">
                <div class="progress" id="progress"></div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-1"></i></div>
                    <div class="baba">Ödeme<br> Yöntemi</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-2"></i></div>
                    <div class="baba">Ödeme <br>Bilgileri</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-3"></i></div>
                    <div class="baba">Ödeme <br>Özeti</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-4"></i></div>
                    <div class="baba">Sms<br>Doğrulama</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-5"></i></div>
                    <div class="baba">Üye<br>Profil</div>
                </div>
                <div class="ana">
                    <div class="circle"><i class="fa-regular fa-6"></i></div>
                    <div class="baba">İşlem <br>Bilgileri</div>
                </div>
            </div>

            <div class="deneme">

                <!---------------STEP 2 HAVALE ONAY START------------------>
                <div class="slidercont" id="eftsonay">
                    <div class="topm">
                        <div class="infor">
                            <div class="st1">
                                <div class="text1">İŞLEM NUMARASI:</div>
                                <div class="text2">@Model.entity.TransactionID</div>
                            </div>
                            <div class="st1">
                                <div class="text1">TARİH:</div>
                                <div class="text2">@DateTime.Today.ToString("dd MMMM yyyy")</div>
                            </div>
                            <div class="st1">
                                <div class="text1">TOPLAM:</div>
                                <div class="text2">@(string.Concat(Model.entity.Amount.ToString("n2"), " ₺"))</div>
                            </div>
                            <div class="st1 none">
                                <div class="text1">ÖDEME YÖNTEMİ:</div>
                                <div class="text2">HAVALE / EFT</div>
                            </div>
                        </div>
                        <div class="parrots">
                            <p class="thins2" style="margin-top:1rem;margin-bottom:1rem;">@(string.Concat("İŞLEM NUMARANIZ #", Model.entity.TransactionID))</p>
                        </div>
                    </div>
                    <div class="boxbank">
                        <div class="menu2step" style="width:unset; margin-top:4rem;">
                            <h3 class="" style="text-align:center !important;">ÖDEME ÖZETİ</h3>
                        </div>
                    </div>
                    <div class="form">
                        <div class="formmain">
                            <div class="confirmeft">
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> İŞLEM NO</div>

                                    <div class="hed2">@Model.entity.TransactionID</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> ÖDEME YÖNTEMİ</div>

                                    <div class="hed2">Havale/EFT</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> TELEFON NO</div>

                                    <div class="hed2">@Model.entity.Phone</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> AD SOYAD</div>

                                    <div class="hed2">@Model.entity.SenderName</div>
                                </div>
@*                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> TC KİMLİK</div>

                                    <div class="hed2">@Model.entity.SenderIdentityNr</div>
                                </div>*@
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> GÖNDERİM TARİHİ - SAATİ</div>

                                    <div class="hed2">@(string.Concat(Model.entity.ActionDate.ToString("dd.MM.yyyy"), " ", Model.entity.ActionTime))</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> YATIRILACAK BANKA</div>

                                    <div class="hed2">@Model.SelectedBank.Bank</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> IBAN NO</div>

                                    <div class="hed2">@Model.SelectedBank.IBAN</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> Hesap Sahibi</div>

                                    <div class="hed2">@Model.SelectedBank.Title</div>
                                </div>
                                <div class="rowonay">
                                    <div class="hed1"><i class="fa-solid fa-circle-arrow-right"></i> YATIRILAN TUTAR</div>

                                    <div class="hed2">@(string.Concat(Model.entity.Amount.ToString("n2"), " TRY"))</div>
                                </div>
                                <div class="boxbank">
                                    <div class="menu2step" style="width:unset; margin-top:2rem;background: #ffcc0059;">
                                        <h3 class="text-warning" style="text-align:center !important; color:#838322;"><i class="fa fa-circle-exclamation fs-5" style="margin: 10px;"></i>STİLPAY Tarafından İşlem Onayı İçin (+90) @Model.entity.Phone[1..4] @Model.entity.Phone[4..7] @Model.entity.Phone[7..9] @Model.entity.Phone[9..11] Numaralı Telefonunuzdan Aranabilirsiniz.</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <form method="post" asp-area="panel" asp-antiforgery="true" style="width:100%;"
                              data-ajax="true" data-ajax-method="POST"
                              data-ajax-begin="onBegin" data-ajax-failure="onFailure" data-ajax-success="onSuccess">
                            <div class="formend">
                                <div class="confirm">

                                    <button type="submit" class="hovers" id="btnSubmit">
                                        <i class="fa-solid fa-paper-plane"></i> ONAYLA</a>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!---------------STEP 2 HAVALE ONAY END------------------>
            </div>

            <div class="boxfooter">
                <div class="boxlast">
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/4.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/13.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/8.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/10.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/9.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/7.png" alt="">
                    </div>


                    
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/14.webp" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/areas/panel/js/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/imask/3.4.0/imask.min.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/animation.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/app.js"></script>

    <script type="text/javascript" src="~/areas/panel/js/jquery/jquery-validate.js"></script>
    <script type="text/javascript" src="~/areas/panel/js/jquery/jquery-unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/areas/panel/js/bootstrap/bootstrap-bundle.js"></script>
    <script type="text/javascript" src="~/areas/panel/js/sweetalert/sweetalert2.all.min.js"></script>
    <script type="text/javascript" src="~/areas/panel/js/views/paymentnotification/information.js?v.1.0"></script>
</body>

</html>