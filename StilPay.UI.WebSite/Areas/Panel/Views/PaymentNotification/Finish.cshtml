@model PaymentNotificationViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <title>Burateknoloji | Ödeme Bildirimi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="~/areas/panel/css/views/paymentnotification/style.css" rel="stylesheet" />
     <link rel="shortcut icon" href="~/ui/assets/img/fav.png" type="image/x-icon">
</head>

<body>

    <div class="parrot">
        <div class="mainbox">
            <div class="allows">
                <div class="progress" id="progress"></div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-1"></i></div>
                    <div class="baba">Ödeme<br> Yöntemi</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-2"></i></div>
                    <div class="baba">Ödeme <br>Bilgileri</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-3"></i></div>
                    <div class="baba">Ödeme <br>Özeti</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-4"></i></div>
                    <div class="baba">Sms<br>Doğrulama</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-5"></i></div>
                    <div class="baba">Üye<br>Profil</div>
                </div>
                <div class="ana">
                    <div class="circle active"><i class="fa-regular fa-6"></i></div>
                    <div class="baba">İşlem <br>Bilgileri</div>
                </div>
            </div>

            <div class="deneme">
                <!---------------STEP 3 info START------------------>
                <div class="slidercont" id="stepfinal">
                    <div class="topm">
                        <div class="infor">
                            <div class="st1">
                                <div class="text1">İŞLEM NUMARASI:</div>
                                <div class="text2">@Model.entity.TransactionID</div>
                            </div>
                            <div class="st1">
                                <div class="text1">TARİH:</div>
                                <div class="text2">@DateTime.Today.ToString("dd MMMM yyyy")</div>
                            </div>
                            <div class="st1">
                                <div class="text1">TOPLAM:</div>
                                <div class="text2">@(string.Concat(Model.entity.Amount.ToString("n2"), " ₺"))</div>
                            </div>
                            <div class="st1 none">
                                <div class="text1">ÖDEME YÖNTEMİ:</div>
                                <div class="text2">HAVALE / EFT</div>
                            </div>
                        </div>
                        <div class="parrots">
                            <p class="thins2" style="margin-top:1rem;margin-bottom:1rem;">@(string.Concat("İŞLEM NUMARANIZ #", Model.entity.TransactionID))</p>
                        </div>
                    </div>

                    <div class="boxbank">
                        <div class="menu2step" style="width:unset; margin-top:6rem;">
                        </div>
                    </div> 

@*                     <div class="row">
                        <div class="arrive2" style="background:none">
                            <p class="text1">ÖDEME DURUMU:</p>
                            <p class="text2 onaystay" id="status">ONAY BEKLİYOR</p>
                            <div class="loader" id="spinner"></div>
                        </div>
                    </div>
 *@
                    <div class="form">
                        <div class="info" id="parent">
                            <div class="row">
                                <div class="infobox">
                                    <p class="text1">ÖDEME DURUMU:</p>
                                    <p class="text2 onaystay" id="status">ONAY BEKLİYOR</p>
                                    <div class="loader" id="spinner"></div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="infobox">
                                    <p class="text1">ÖDEME TARİHİ:</p>
                                    <p class="text2">@Model.entity.ActionDate.ToString("dd.MM.yyyy")</p>
                                </div>
                                <div class="infobox">
                                    <p class="text1">ÖDEME SAHİBİ:</p>
                                    <p class="text2">Burateknoloji</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="infobox">
                                    <p class="text1">ÖDEME TİPİ:</p>
                                    <p class="text2 onay">BANKA HAVALE / EFT</p>
                                </div>
                                <div class="infobox">
                                    <p class="text1">ÖDEME BİLDİRİMİ DURUMU:</p>
                                    <p class="text2">ÖDEME BİLDİRİMİ BAŞARILI</p>
                                </div>
                            </div>
                        </div>

                        <div class="formend" style="margin:0;">
                            <div class="mybanners">
                                <div class="hol">
                                    <img src="images/Burateknoloji1.png" alt="">
                                </div>
                                <div class="hol">
                                    <img src="images/366-3669285_secure-ssl-encryption-logo-png-transparent-png.png" alt="">
                                </div>

                                <div class="hol none">
                                    <img src="images/3D.png" alt="">
                                </div>
                            </div>

                            <input type="hidden" id="jsonRedirectUrl" value="@JsonConvert.SerializeObject(Model.RedirectUrl)" />
                            <input type="hidden" id="jsonTransferStatus" value="@JsonConvert.SerializeObject(Model.entity.Status)" />
                            <div class="confirm">
                                <button id="btnGoSite" style="cursor:pointer">
                                    <i class="fa-solid fa-rotate-left"></i> SİTEYE GERİ DÖN
                                </button>
                            </div>
                        </div>
                    </div>

                </div>
                <!---------------STEP 3 info END------------------>
            </div>

            <div class="boxfooter">
                <div class="boxlast">
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/4.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/13.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/8.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/10.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/9.png" alt="">
                    </div>
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/7.png" alt="">
                    </div>


                    
                    <div class="trademark">
                        <img src="~/areas/panel/img/paymentnotification/14.webp" alt="">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript" src="~/areas/panel/js/jquery/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/imask/3.4.0/imask.min.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/animation.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/app.js"></script>
    <script src="~/areas/panel/js/views/paymentnotification/finish.js"></script>

    <style>
    .loader {
        width: 48px;
        height: 48px;
        border: 5px solid #54c6e7;
        border-bottom-color: transparent;
        border-radius: 50%;
        display: inline-block;
        box-sizing: border-box;
        animation: rotation 1s linear infinite;
        }

        @@keyframes rotation {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
        } 
    </style>
</body>

</html>
