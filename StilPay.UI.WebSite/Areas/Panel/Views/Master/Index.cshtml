@{
    ViewData["Title"] = "Bireysel Panel";
}

@section css{
    <link rel="stylesheet" href="~/areas/panel/css/select2/select2.css" />
    <link rel="stylesheet" href="~/areas/panel/css/datatables/dataTables-bootstrap5.css" />
}

<div class="row mt-2">
    <div class="col-lg-12">

        <div class="card border-1 border-custom">
            <div class="card-header bg-custom text-white">İşlem Hareketleri</div>
            <div class="card-body table-responsive">
                <table id="Table" class="table table-bordered table-hover">
                    <thead>
                        <tr class="bg-custom text-white">
                            <th class="col-1 text-center">İşlem Tarihi</th>
                            <th class="col-1 text-center">İşlem Numarası</th>
                            <th class="col-3 text-center">İşlem Tipi</th>
                            <th class="col-1 text-end">İşlem Tutarı</th>
                            <th class="col-1 text-end">Komisyon</th>
                            <th class="col-1 text-end">İşlem Ücreti</th>
                            <th class="col-1 text-end">Net Toplam</th>
                            <th class="col-1 text-center">Durum</th>
                            <th class="col-1 text-center">Durum Tarihi</th>
                            <th class="col-1 text-center">Detay</th>
                            <th class="d-none">IDActionType</th>
                            <th class="d-none">ID</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section js {
    <script src="~/areas/panel/js/select2/select2.js"></script>
    <script src="~/areas/panel/js/datatables/dataTables-jquery.js"></script>
    <script src="~/areas/panel/js/datatables/dataTables-bootstrap5.js"></script>
    <script src="~/areas/panel/js/views/master/index.js"></script>
}