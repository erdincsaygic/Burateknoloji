@{
    ViewData["Title"] = "StilPay Üye İşyeri Hakediş Takvimi";
}

@section css {
    <link rel="stylesheet" href="~/css/select2/select2.css" />
    <link rel="stylesheet" href="~/css/datatables/dataTables-bootstrap5.css" />
    <link rel="stylesheet" href="~/css/jquery/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/fullcalendar/fullcalendar.css" />
}

<style>
    /* Custom CSS to reduce spacing and adjust styles */
    .fc td, .fc th {
        padding: 2px 4px; /* Adjust as needed */
    }

    .fc .fc-toolbar-title {
        font-size: 16px; /* Adjust as needed */
    }

    .fc .fc-daygrid-day-number {
        font-size: 12px; /* Adjust as needed */
    }

    .fc .fc-event {
        font-size: 12px; /* Adjust as needed */
        text-align: left; /* Align text to the left */
        padding-left: 4px; /* Add padding for better alignment */
    }

    .fc .fc-daygrid-day {
        height: 70px; /* Adjust the height of date fields */
    }

    .fc .fc-event-title, .fc-event-time, .fc-daygrid-event-dot {
        display: none; /* Remove the default event title (00) */
    }

    .fc-daygrid-day-frame {
        height: 70px
    }

    .pyTotal, .pyName {
        font-weight: bold;
        color: blue;
    }

    .pyValue {
        font-weight: bold;
        color: black;
    }
    
    .rbValue{
        color:red;
    }

    .fc-prev-button {
        background: blue !important;
        border: none !important;
    }
    .fc-next-button {
        background: #215ecf !important;
        border: none !important;
    }

    .fc-day-today{
        background-color: whitesmoke !important
    }


</style

<div class="col-lg-12">
    <div class="card border-1 border-custom">

        
        <div class="card-header">
            <div class="row justify-content-center">
                <div class="col-lg-3">
                    <select class="form-select select2" id="slcCompanies"></select>
                </div>

                <div class="col-lg-1 mt-lg-0 mt-2">
                    <div class="d-grid">
                        <button class="btn btn-custom" id="btnList"><i class="fa fa-bars"></i>&nbsp;&nbsp;&nbsp;Listele</button>
                    </div>
                </div>
            </div>
        </div>


        <div class="card-body">
             <div id='calendar'></div>
        </div>
    </div>

</div>


@section js {
    <script src="~/js/jquery/jquery.js"></script>
     <script src="~/js/select2/select2.js"></script>
    <script src="~/js/datatables/dataTables-jquery.js"></script>
    <script src="~/js/datatables/dataTables-bootstrap5.js"></script>
    <script src="~/js/jquery/jquery-ui.js"></script>
    <script src="~/js/fullcalendar/fullcalendar.js"></script>
    <script src="~/js/views/companyprogresspaymentcalendar/index.js"></script>
}