@model AccountingReportEditViewModel


@section css{
    <link rel="stylesheet" href="~/css/jquery/jquery-ui.css" />
    <link rel="stylesheet" href="~/css/select2/select2.css" />
    <link rel="stylesheet" href="~/css/select2/select2-bootstrap-5-theme.css" />
    <link rel="stylesheet" href="~/css/datatables/dataTables-bootstrap5.css" />
}

<div class="row mt-2">
    <div class="col-lg-5 offset-7">
        <div class="d-flex justify-content-end mt-2">
            <a class="btn btn-primary btn-block" style="margin:0 5px" id="getBankBalancesLogBtn" data-bs-toggle="modal" data-bs-target="#mdlBankBalances">
                <i class="fa-solid fa fa-server"></i>&nbsp;Bakiye Sorgulama Geçmişi
            </a>
            <a class="btn btn-dark btn-block" style="margin:0 5px" asp-controller="AccountingReport" asp-action="BankAccount">
                <i class="fa-solid fa fa-plus"></i>&nbsp;Banka Ekle
            </a>
        </div>
    </div>

</div>


@foreach (var item in ViewBag.CompanyBankAccount)
{
    <div class="card mt-2 border-1 border-custom me-2 ms-2">
        <div class="card-header bg-white text-custom text-center fw-bold">@item.Name</div>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6 d-flex flex-row flex-nowrap justify-content-between align-items-center">

                    <div>
                        <a class="btn btn-default" data-bs-toggle="modal" onclick=idBankChange("@item.ID") data-bs-target="#mdlIncome">
                            <i class="fa-solid fa-building-columns"></i>&nbsp;Gelir Ekle
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-default" data-bs-toggle="modal" onclick=idBankChange("@item.ID") data-bs-target="#mdlExpense">
                            <i class="fa-solid fa-cart-plus"></i>&nbsp;Gider Ekle
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-default" data-bs-toggle="modal" onclick=idBankChange("@item.ID") data-bs-target="#mdlBankIncome">
                            <i class="fa-solid fa-right-left"></i>&nbsp;Banka Transferi Ekle
                        </a>
                    </div>
                    <div>
                        <a class="btn btn-default" data-bs-toggle="modal" onclick="document.getElementById('IDBank').value='@item.ID'" data-bs-target="#mdlPaymentInstitutionTransfer">
                            <i class="fa-solid fa-right-left"></i>&nbsp;Ödeme Kuruluşu Transferi Ekle
                        </a>
                    </div>

                </div>
                <div class="col-lg-1">
                </div>
                <div class="col-lg-2 fw-bold text-center">
                    TOPLAM PARA
                    <br />
                    <span class="text-custom">@item.Amount ₺</span>
                </div>

                <div class="col-lg-1 fw-bold text-center">
                    <a href="BankTransactionList?id=@item.ID" target="_blank">
                        <i class="fa fa-search" title="Cari Hareketler"></i>
                    </a>
                </div>

                <div class="col-lg-1 fw-bold text-center">
                    <a href="BankTransactionsDetail?id=@item.ID">
                        <i class="fa fa-circle-info" onclick=idBankChange(2)></i>&nbsp;Detay
                    </a>
                </div>


                @*                <div class="col-lg-1 d-flex align-items-center">
            <a asp-controller="AccountingReport" asp-action="BankTransactionDetail">
            <i class="fa fa-circle-info"></i>&nbsp;Detay
            </a>
            </div>*@
            </div>
        </div>
    </div>
}


<!-- Modal Onay -->
<div class="modal fade" id="mdlIncome" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <form asp-controller="AccountingReport" asp-action="CompanyFinanceTransferInsert" asp-antiforgery="true" id="frmDef"
                  data-ajax="true" data-ajax-method="POST"
                  data-ajax-begin="onBegin" data-ajax-failure="onFailure"
                  data-ajax-success="onSuccess" data-ajax-complete="onComplete">

                <input type="hidden" asp-for="entity.ID" />
                <input type="hidden" asp-for="entity.TransactionType" value="1" />
                <input type="hidden" asp-for="entity.PaymentMethod" value="1" />
                <input type="hidden" id="idBank1" asp-for="entity.IDBankAccount" />

                <div class="modal-header d-flex flex-wrap bg-dark text-white">
                    <h5 class="modal-title text-center w-100">Gelir Ekle</h5>
                </div>

                <div class="row border-bottom mt-2">
                    <div class="modal-body">
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <input type="text" class="form-control" value="0,00" placeholder="Tutar" asp-for="entity.Amount" />
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <select class="form-select" asp-for="entity.TransactionDetailType">
                                    <option value="1">Muhtelif Gelirler</option>
                                </select>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-lg-12">
                                <input type="text" class="form-control" placeholder="Açıklama" asp-for="entity.Description" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer d-flex flex-nowrap justify-content-between">
                    <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Kapat</button>
                    <button type="submit" id="btnExpense" class="btn btn-custom">Ekle</button>
                </div>
            </form>

        </div>
    </div>
</div>

