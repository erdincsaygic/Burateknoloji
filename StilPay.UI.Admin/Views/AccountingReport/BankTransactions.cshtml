<!-- Modal Bank Balances -->
<div class="modal fade" id="mdlBankBalances" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header d-flex bg-dark text-white">
                <h5 class="modal-title text-center w-100">Bakiye Sorgulama Geçmişi</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close">
                </button>
            </div>

            <div class="row mt-2">
                <div class="col-lg-12">                
                    <div class="col-lg-2 offset-lg-10 mb-2">
                        <a class="btn btn-success btn-block" style="margin:5px" id="bankBalanceQuerytBtn" onclick="$('#frmGetBalances').submit();">
                            <i class="fa-solid fa fa-plus"></i>&nbsp;Bakiye Sorgula

                            <form asp-controller="AccountingReport" asp-action="GetBankBalances" asp-antiforgery="true" id="frmGetBalances"
                                  data-ajax="true" data-ajax-method="POST"
                                  data-ajax-begin="onBegin" data-ajax-failure="onFailure"
                                  data-ajax-success="onSuccessGetBankBalance" data-ajax-complete="onComplete">
                            </form>
                        </a>
                    </div>
                    <div class="card border-1 border-custom">
                        <div class="card-header bg-custom text-white">Bakiye Sorgulama Geçmişi</div>
                        <div class="card-body table-responsive">
                            <table id="bankBalanceLogsTable" class="table table-bordered table-hover">
                                <thead>
                                    <tr class="bg-custom text-white">
                                        <th class="col-1 text-center">Oluşturulma Tarihi</th>
                                        <th class="col-1 text-center">Oluşturan</th>
                                        <th class="col-1 text-center">Banka</th>
                                        <th class="col-1 text-center">Hesap Tipi</th>
                                        <th class="col-2 text-center">IBAN</th>
                                        <th class="col-1 text-center">Bakiye</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

